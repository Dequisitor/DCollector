body
	background-color gray
	padding 50px 0
	*
		box-sizing border-box
		
	.jumbotron
		padding 0 0 10px 0

footer
	margin-top -30px
	padding 5px 0
	background-color black
	color white
	font-weight bold
	font-style itallic
	
.entry
	padding 10px
	
	.row
		margin 5px 0
		text-align left
		display table-row
		
		> label
			display table-cell
			//width 100%
		
		.contents
			width 100%
			text-align right
			display table-cell

			.value
				text-align right
				font-weight bold

			.unit
				padding 0 5px
				width 30px

			.remove
				cursor pointer

			.remove:hover
				color red
				
			.value, .unit, .remove
				display inline-block

			input.value
				text-align right
				
			input.formula
				min-width 160px
		
.entry:nth-child(odd)
	background-color #ccc

.entry:nth-child(even)
	background-color #ddd

.entry:hover
	background-color #5588dd


button#add
	cursor pointer
	display block
	
	.glyphicon
		color white
		
button#send
	cursor pointer
	margin 10px 0 0 0
		
.file-selector
	margin 10px
	width 100%
	text-align right

	button
		margin-right 10px
		margin-bottom 10px

.navbar-header
	float none

.btn.link
	margin 10px 0px
	font-weight bold
	
.axiscontainer
	margin-top 20px

	.axis
		
		.axispanel
			background-color white
			box-shadow 2px 2px 5px 5px
			border 1px solid white
			margin 10px
			padding 10px
			min-width 120px
			//height 200px
			
			.options
				margin-top 10px
				border-top 1px solid black
				padding 10px
	
